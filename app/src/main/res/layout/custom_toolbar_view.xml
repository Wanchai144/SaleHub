<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/cardview_light_background">

        <LinearLayout
            android:id="@+id/layBack"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">


                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/align" />


        </LinearLayout>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:fontFamily="@font/font_quark_bold"
            android:gravity="center"
            android:text="titer"
            android:layout_centerInParent="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp" />


        <RelativeLayout

            android:id="@+id/twitter_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:id="@+id/imgicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="เลือกสินค้าต่อ"
                        android:id="@+id/visible_basketShow"
                        android:visibility="gone"
                        android:layout_marginEnd="10dp"
                        android:textColor="#6ED1CC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/layBackInvisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:sparkbutton_activeImage="@drawable/cart"
                    app:sparkbutton_iconSize="30dp"
                    app:sparkbutton_primaryColor="@color/heart_primary_color"
                    app:sparkbutton_secondaryColor="@color/heart_secondary_color" />
                <LinearLayout
                    android:id="@+id/tv_status_mdata"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/cudtom_bg_aninm"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_size_mdata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:text="1"
                        android:textColor="@color/textColorWhite"
                        android:textSize="10dp" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/cardview_dark_background" />
</LinearLayout>